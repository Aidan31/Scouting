<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:text="Welcome to Scout App, Enter your scout ID and starting match number."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Scout ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scout_id_label"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/start"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/scoutid_edittext"
            android:layout_below="@+id/scout_id_label"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Red 1 = 1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="75dp"
            android:id="@+id/red1_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_alignBaseline="@+id/scout_id_label"
            android:layout_alignBottom="@+id/scout_id_label"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Red 2 = 2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/red_2_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_below="@+id/scout_id_label"
            android:layout_alignStart="@+id/red1_label" />

        <TextView
            android:text="Red 3 = 3"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/red_2_label"
            android:layout_alignStart="@+id/red_2_label"
            android:id="@+id/red_3_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Blue 1 = 4"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/red_3_label"
            android:layout_alignStart="@+id/red_3_label"
            android:id="@+id/blue_1_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Blue 2 = 5"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/blue_1_label"
            android:layout_alignStart="@+id/red1_label"
            android:id="@+id/blue_2_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Blue 3 = 6"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/blue_2_label"
            android:layout_alignEnd="@+id/blue_1_label"
            android:id="@+id/blue_3_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:text="Starting Match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_below="@+id/blue_3_label"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/match_number_edit_text"
            android:layout_below="@+id/blue_3_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />

        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="54dp"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
</RelativeLayout>